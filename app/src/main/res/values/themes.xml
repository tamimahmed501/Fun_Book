<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.FunBook" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:statusBarColor">@color/statusBar</item>

        <item name="colorPrimary">@color/statusBar</item>
        <item name="android:navigationBarColor">@color/statusBar</item>
        <item name="android:windowLightStatusBar">true</item> <!-- Set status bar text color to black -->

        <!-- Ensure navigation bar text color is dark -->
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="Theme.FunBook" parent="Base.Theme.FunBook" />



    <style name="BottomNavigationView.ActiveText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/selected_color</item>
    </style>

    <style name="BottomNavigationView.InactiveText" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/unselected_color</item>
    </style>


</resources>
