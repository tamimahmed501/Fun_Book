<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".profile">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:src="@drawable/tamim1"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="5dp" />


        <ImageView
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_alignParentRight="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/menu"/>



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Tamim Ahmed"
            android:textColor="@color/selected_color"
            android:textSize="19dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/verify_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/verify2"
            android:layout_toRightOf="@id/name"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp" />

    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Narail, Dhaka, Bangladesh"
        android:gravity="center"
        android:textSize="16dp"
        android:textStyle="bold"
        android:fontFamily="@font/mavenpro"
        android:textColor="@color/selected_color"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:weightSum="6">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/imageradious"
            android:src="@drawable/whatsapp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:visibility="invisible"
            android:padding="7dp"/>





        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/imageradious"
            android:src="@drawable/fb"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:padding="8dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/imageradious"
            android:src="@drawable/insta"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:padding="5dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/imageradious"
            android:src="@drawable/email"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:padding="8dp"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/imageradious"
            android:src="@drawable/whatsapp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:padding="7dp"/>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/imageradious"
            android:src="@drawable/whatsapp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:visibility="invisible"
            android:padding="7dp"/>







    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:weightSum="3">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="153"
                android:textSize="18dp"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:fontFamily="@font/timesnewroman"
                android:gravity="center"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Total Post"
                android:textSize="16dp"
                android:textStyle="normal"
                android:textColor="@color/blue"
                android:fontFamily="@font/mustafakamal"
                android:gravity="center"/>


        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="53462"
                android:textSize="18dp"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:fontFamily="@font/timesnewromancebold"
                android:gravity="center"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Followers"
                android:textSize="16dp"
                android:textStyle="normal"
                android:textColor="@color/blue"
                android:fontFamily="@font/mustafakamal"
                android:gravity="center"/>


        </LinearLayout>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_weight="1">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="01"
                android:textSize="18dp"
                android:textColor="@color/blue"
                android:textStyle="bold"
                android:fontFamily="@font/timesnewromancebold"
                android:gravity="center"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Following"
                android:textSize="16dp"
                android:textStyle="normal"
                android:textColor="@color/blue"
                android:fontFamily="@font/mustafakamal"
                android:gravity="center"/>


        </LinearLayout>





    </LinearLayout>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:weightSum="2">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:cardBackgroundColor="@color/blue"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="More Option"
                android:gravity="center"
                android:background="@drawable/cardtextradious"
                android:layout_margin="2dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:textSize="16dp"
                android:fontFamily="@font/kalpurush"/>




        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Edit Profile"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@color/blue"
                android:textColor="#FFFFFF"
                android:textSize="16dp"
                android:fontFamily="@font/kalpurush"/>




        </androidx.cardview.widget.CardView>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/profilelayradious"
        android:layout_marginRight="20dp"
        android:weightSum="2">



        <TextView
            android:id="@+id/profilepic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Profile"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="@font/kalpurush"
            android:textColor="#FFFFFF"
            android:background="@drawable/profiletextradious"
            android:layout_weight="1"/>




        <TextView
            android:id="@+id/mypost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="My Post"
            android:gravity="center"
            android:textSize="18dp"
            android:textStyle="bold"
            android:fontFamily="@font/kalpurush"
            android:textColor="@color/blue"
            android:layout_weight="1"/>




    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:weightSum="3">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="6dp"
            android:layout_margin="3dp">




            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tamim1"
                android:scaleType="centerCrop"/>


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="6dp"
            android:layout_margin="3dp">




            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tamim8"
                android:scaleType="centerCrop"/>


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="6dp"
            android:layout_margin="3dp">




            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tamim5"
                android:scaleType="centerCrop"/>


        </androidx.cardview.widget.CardView>





    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:weightSum="3">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="6dp"
            android:layout_margin="3dp">




            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tamim6"
                android:scaleType="centerCrop"/>


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="6dp"
            android:layout_margin="3dp">




            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tamim9"
                android:scaleType="fitXY"/>


        </androidx.cardview.widget.CardView>



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:cardCornerRadius="6dp"
            android:layout_margin="3dp">




            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/tamim"
                android:scaleType="centerCrop"/>


        </androidx.cardview.widget.CardView>





    </LinearLayout>




</LinearLayout>